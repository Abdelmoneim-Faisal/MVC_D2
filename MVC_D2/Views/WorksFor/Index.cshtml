@model List<WorksFor>
@{
    int i = 0;
    var colorValue = ViewData["ColorValue"] as string;
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Project Name</th>
            <th scope="col">Worker Name</th>
            <th scope="col">Hours</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(++i)</th>
                <td>@item.project.Pname</td>
                <td>@item.employee.Fname @item.employee.Lname</td>
                <td style="color:@(item.Hours < 5 ? colorValue : "green")">@item.Hours</td>
                <td>
                    <a asp-action="Details" asp-controller="WorksFor" asp-route-id="@item.employee.SSN">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
